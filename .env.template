# Tamil PDF OCR Translation Configuration
# Copy this file to .env (without the template suffix) and customize your settings

# =============================================================================
# API KEYS & AUTHENTICATION
# =============================================================================

# Google Gemini API Key (recommended for high-quality Tamil translation)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Project ID (for Google Cloud Translate API)
GOOGLE_CLOUD_PROJECT=your_google_cloud_project_id

# Google Application Credentials (path to service account JSON file)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Gemini model to use (options: gemini-2.5-flash, gemini-1.5-pro, etc.)
GEMINI_MODEL=gemini-2.5-flash

# =============================================================================
# RATE LIMITING & PERFORMANCE
# =============================================================================

# Rate limiting delays (in seconds) to avoid API limits
# Adjust these based on your API tier and usage patterns

# Google Gemini rate limiting
GEMINI_DELAY_BETWEEN_REQUESTS=1.0
GEMINI_DELAY_BETWEEN_CHUNKS=0.5
GEMINI_MAX_REQUESTS_PER_MINUTE=60

# Google Cloud Translate rate limiting  
GOOGLE_TRANSLATE_DELAY_BETWEEN_REQUESTS=0.2
GOOGLE_TRANSLATE_DELAY_BETWEEN_CHUNKS=0.1
GOOGLE_TRANSLATE_MAX_REQUESTS_PER_MINUTE=300

# Local translation rate limiting (for LibreTranslate API)
LOCAL_TRANSLATE_DELAY_BETWEEN_REQUESTS=0.5
LOCAL_TRANSLATE_DELAY_BETWEEN_CHUNKS=0.2
LOCAL_TRANSLATE_MAX_REQUESTS_PER_MINUTE=120

# =============================================================================
# OCR SETTINGS
# =============================================================================

# OCR processing DPI (higher = better quality, slower processing)
OCR_DPI=300

# Tesseract OCR configuration
TESSERACT_CONFIG=--oem 3 --psm 6

# =============================================================================
# TRANSLATION SETTINGS
# =============================================================================

# Maximum characters per translation chunk (larger = fewer API calls, but may hit limits)
MAX_CHUNK_SIZE=8000

# Translation temperature (0.0-1.0, lower = more consistent, higher = more creative)
TRANSLATION_TEMPERATURE=0.1

# Maximum output tokens for translation
TRANSLATION_MAX_OUTPUT_TOKENS=4096

# =============================================================================
# LOGGING & DEBUG
# =============================================================================

# Enable verbose logging (true/false)
VERBOSE_LOGGING=false

# Enable debug mode (true/false)
DEBUG_MODE=false

# Log file path (leave empty to disable file logging)
LOG_FILE_PATH=

# =============================================================================
# FILE PROCESSING
# =============================================================================

# Default output directory for processed files
OUTPUT_DIRECTORY=./output

# Auto-open output files after processing (true/false)
AUTO_OPEN_OUTPUT=false